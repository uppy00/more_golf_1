<% case @post.tag&.name %>
<% when "スコア記録" %>
  <%= render partial: "posts/edit_form/edit_score_record", locals: { post: @post } %>
<% when "練習記録" %>
  <%= render partial: "posts/edit_form/edit_practice_record", locals: { post: @post } %>
<% else %>
  <%= render partial: "posts/edit_form/edit_default", locals: { post: @post } %>
<% end %>