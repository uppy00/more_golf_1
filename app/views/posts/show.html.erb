<!-- 投稿詳細ページ　-->
<div class="flex">
  <!-- 左側の投稿情報 -->
  <div class="w-1/3  pt-5 pl-15 mr-10">
    <div class="mb-4 mt-8 text-left">
      <!-- 投稿者の名前 -->
      <span class="font-bold text-xl">投稿者: ユーザー名</span>
    </div>

    <div class="mb-4 text-center">
      <!-- 投稿写真 -->
      <img src="投稿写真URL" alt="投稿画像" class="w-[380px] h-[300px] object-cover rounded-lg bg-gray-300">
    </div>

    <div class="mb-4 text-center">
      <!-- 投稿本文 -->
      <p class="w-[380px] h-[230px] text-gray-700 overflow-auto bg-gray-300 rounded-md">ここに投稿本文が入ります。</p>
    </div>
  </div>

  <!-- 右側のコメントセクション -->
  <div class="w-[600px] p-4 pl-20">
    <h1 class="pt-10 text-2xl">コメント</h1>
    <div class="mt-5 bg-gray-300 p-2 border rounded-md">
      <label for="comment" class="block text-sm font-medium text-gray-700"></label>
      <textarea id="comment" rows="4" class="w-full p-2 border-none rounded-md"></textarea>
    </div>

    <button class=" bg-green-500 text-white p-2 mt-10 rounded-md">投稿</button>

    <div class="mt-6">
      <!-- コメント表示 -->
      <div class="border-t pt-4">
        <div class="mb-2">
          <span class="font-semibold">ユーザー名:</span> こちらがコメントです。
        </div>
        <div class="pt-6 border-t">
          <span class="font-semibold">別のユーザー:</span> 別のコメントがここに表示されます。
        </div>
      </div>
    </div>
  </div>
</div>