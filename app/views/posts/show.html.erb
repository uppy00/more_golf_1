<% case @post.tag&.name %>
<% when "スコア記録" %>
  <%= render partial: "posts/show_form/show_score_record", locals: { post: @post } %>
<% when "練習記録" %>
  <%= render partial: "posts/show_form/show_practice_record", locals: { post: @post } %>
<% else %>
  <%= render partial: "posts/show_form/show_default", locals: { post: @post } %>
<% end %>