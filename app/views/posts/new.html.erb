<!-- 新規投稿ページ　-->
<div>
  <div class="flex">
    <h1 class="text-2xl p-10 ">新規投稿</h1>
    <div class="pt-10 pl-4 rounded-lg ml-20">
      <%= form_with model: @post do |f| %>
      <%= render "shared/errors_messages", object: f.object %>
      
      <div class="flex items-start gap-8">
        <!-- タイトル -->
        <div class="flex flex-col">
          <%= f.label :title, "タイトル", class: "text-2xl mb-2" %> 
          <%= f.text_field :title, class: 'border w-[440px] h-[40px]' %>
        </div>

        <!-- タグ -->
        <div class="flex flex-col">
          <%= f.label :tag_id, "タグ", class: "text-2xl mb-2" %>
          <%= f.collection_select :tag_id, Tag.all, :id, :name, { prompt: "タグ" }, { class: "border h-[40px] w-[200px]" } %>
        </div>
      </div>
      
      <!-- 本文 -->
      <div class="mb-4">
        <%= f.label :body, "本文", class: "text-2xl block mb-6" %> 
        <%= f.text_area :body, class: 'border  w-[780px] h-[140px]' %>
      </div>

      <!-- 画像のアップロード -->
      <div class="mb-4">
        <%= f.label :image, "画像", class: "text-2xl block mb-6"%>
        <%= f.file_field :image, class: 'border w-[440px] h-[40px]'%>
      </div>
      <!-- 投稿ボタン -->
      <div class="mb-4 flex justify-center">
        <%= f.submit "投稿", class: 'hover:bg-green-500 transition-all duration-300 w-[110px] h-[80p] py-2 bg-green-600 text-white rounded-md ' %>
      </div>
      <% end %>
    </div>
  </div>
</div>