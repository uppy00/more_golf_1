<!-- ユーザーログインページ　-->
<% if flash.now[:danger] %>
  <div class="bg-orange-100 border-l-4 border-orange-500 text-orange-700 p-4" role="alert">
    <p><%= flash.now[:danger] %></p>
  </div>
<% end %>
<div>
  <div>
    <h1 class="text-2xl">ログイン</h1>
    <%= form_with url: login_path do |f| %>
      <div class="mb-4">
        <%= f.label :email,"メールアドレス"%>
        <%= f.email_field :email%>
      </div>
      <div class="mb-4">
        <%= f.label :password,"パスワード"%>
        <%= f.password_field :password%>
      </div>
      <div class="mb-4">
        <%= f.submit "ログイン", class: 'hover:bg-green-500 transition-all duration-300'%>
      </div>
    <% end %>
    <div class="mb-4">
      <%= link_to 'パスワードを忘れた方'%>
    </div>
  </div>
</div>